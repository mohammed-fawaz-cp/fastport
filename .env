# ============================================
# fastPort Server Configuration
# ============================================

# --------------------------------------------
# REQUIRED: Server Settings
# --------------------------------------------

# Server port (default: 3000)
PORT=3000

# Database type: 'memory', 'sqlite', or 'postgres'
DB_TYPE=sqlite

# --------------------------------------------
# REQUIRED: SQLite Configuration (if DB_TYPE=sqlite)
# --------------------------------------------

# Path to SQLite database file
SQLITE_PATH=./data/fastport.db

# --------------------------------------------
# OPTIONAL: PostgreSQL Configuration (if DB_TYPE=postgres)
# --------------------------------------------

# Uncomment these if using PostgreSQL
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fastport
# DB_USER=fastport_user
# DB_PASS=your_secure_password_here

# --------------------------------------------
# REQUIRED: Web Admin Portal
# --------------------------------------------

# Enable web admin portal (true/false)
ENABLE_WEB_PORTAL=true

# Admin portal credentials
ADMIN_USER=admin
ADMIN_PASS=1234

# --------------------------------------------
# OPTIONAL: Security & Performance
# --------------------------------------------

# Rate limiting for API endpoints (requests per 15 minutes)
# API_RATE_LIMIT=100

# Maximum WebSocket payload size (in bytes, default: 10MB)
# MAX_PAYLOAD_SIZE=10485760

# Session cleanup interval (in seconds, default: 60)
# CLEANUP_INTERVAL=60

# Default message expiry time (in milliseconds, default: 1 hour)
# DEFAULT_MESSAGE_EXPIRY=3600000

# --------------------------------------------
# OPTIONAL: CORS Configuration
# --------------------------------------------

# Allowed origins for CORS (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# --------------------------------------------
# OPTIONAL: Logging
# --------------------------------------------

# Log level: 'debug', 'info', 'warn', 'error'
# LOG_LEVEL=info

# Enable request logging
# ENABLE_REQUEST_LOGGING=false

# --------------------------------------------
# OPTIONAL: SSL/TLS (for production)
# --------------------------------------------

# Enable HTTPS (requires SSL_KEY_PATH and SSL_CERT_PATH)
# ENABLE_SSL=false
# SSL_KEY_PATH=/path/to/private-key.pem
# SSL_CERT_PATH=/path/to/certificate.pem

# --------------------------------------------
# OPTIONAL: Clustering (for horizontal scaling)
# --------------------------------------------

# Redis URL for pub/sub across multiple instances
# REDIS_URL=redis://localhost:6379

# --------------------------------------------
# DEVELOPMENT ONLY
# --------------------------------------------

# Enable debug mode (verbose logging)
DEBUG=false

# Disable authentication (DANGEROUS - dev only!)
# DISABLE_AUTH=false

ENABLE_TEST_PORTAL=true
